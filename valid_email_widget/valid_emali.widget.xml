<?xml version="1.0" encoding="UTF-8" ?>
<template xml:space="preserve">
    <t  t-name="web.EmailField_valid_email" t-inherit="web.EmailField">
        <xpath expr="." position="inside">
            <span class="text-danger" t-if="isValidFormat">Invalid Email</span>
        </xpath>

        <xpath expr="//input" position="after">
            <a
                t-if="props.record.data[props.name] and !isValidFormat"
                t-att-href="'mailto:'+props.record.data[props.name]"
                class="ms-3 d-inline-flex align-items-center"
                target="_blank"
            >
                <i class="fa fa-envelope" data-tooltip="Send Email" aria-label="Send Email"></i>
            </a>
        </xpath>
    </t>
</template>